# This file is for unifying the coding style for different editors and IDEs
# editorconfig.org

# WordPress Coding Standards
# https://make.wordpress.org/core/handbook/coding-standards/

root                     = true

[*]
charset                  = utf-8
end_of_line              = lf
insert_final_newline     = true
trim_trailing_whitespace = true
indent_style             = tab

[{.babelrc,.jshintrc,*.json,*.yml,Vagrantfile}]
indent_style             = space
indent_size              = 2

[{*.sass,*.scss}]
indent_style             = tab
indent_size              = 4

[{*.txt}]
end_of_line              = crlf

[*.php]
charset                  = utf-8
end_of_line              = lf
insert_final_newline     = true
trim_trailing_whitespace = true
indent_style             = tab
indent_size              = 4
